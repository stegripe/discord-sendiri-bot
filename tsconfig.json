{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": []
}
